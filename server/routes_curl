# signup
curl -X POST http://127.0.0.1:5000/signup -H "Content-Type: application/json" -c cookies.txt -d '{"email": "user@example.com", "password": "password123", "first_name": "John", "last_name": "Doe"}'



# login
curl -X POST http://127.0.0.1:5000/login -H "Content-Type: application/json" -d '{"email": "user@example.com", "password": "password123"}'

# check session 
curl -X GET http://127.0.0.1:5000/debug-session -b cookies.txt

# create quiz
curl -X POST http://127.0.0.1:5000/quizzes -H "Content-Type: application/json"  -b cookies.txt -d '{"creator_id": 1, "title": "Sample Quiz", "questions": [{"text": "What is 2+2?"}]}'

# submit answer
curl -X POST http://127.0.0.1:5000/answers -H "Content-Type: application/json" -b cookies.txt -d '{"student_id": 1, "question_id": 1, "text": "4", "is_correct": true}'
